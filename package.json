{
  "name": "brick-engine",
  "version": "0.8.0",
  "description": "basic xboot engine",
  "bin": {
    "brick-engine": "./bin/brick-engine.js"
  },
  "main": "index.js",
  "types": "typings/index.d.ts",
  "type": "module",
  "scripts": {
    "docs": "jsdoc -c conf.json",
    "build": "tsc -d",
    "build:w": "tsc -d -w",
    "lint": "eslint --fix .",
    "check": "npm run build && npm run lint",
    "test": "npm run check && npm run test:cov",
    "test:watch": "node --experimental-vm-modules ./node_modules/.bin/jest --watch",
    "test:cov": "node --experimental-vm-modules ./node_modules/.bin/jest --coverage"
  },
  "files": [
    "typings",
    "package.json",
    "bin",
    "lib",
    "plugins"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kiba-zhao/brick-engine.git"
  },
  "keywords": [
    "brick",
    "brick-engine",
    "engine"
  ],
  "author": "kiba.x.zhao",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kiba-zhao/brick-engine/issues"
  },
  "homepage": "https://github.com/kiba-zhao/brick-engine#readme",
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/faker": "^5.5.6",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.170",
    "@types/node": "^14.14.20",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.17.0",
    "eslint-config-egg": "^9.0.0",
    "eslint-plugin-jest": "^24.1.3",
    "faker": "^5.5.3",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "jsdoc": "^3.6.6",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "debug": "^4.3.1",
    "is-class": "0.0.9",
    "lodash": "^4.17.20"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "transform": {},
    "coverageProvider": "v8",
    "collectCoverageFrom": [
      "bin/**/*.js",
      "plugins/**/*.js",
      "lib/**/*.js",
      "!**/index.js"
    ]
  }
}
